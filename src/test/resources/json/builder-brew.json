{
  "name": "brew",
  "schema": {
    "openAPIV3Schema": {
      "components": {
        "schemas": {
          "Brew": {
            "properties": {
              "sourceRef": {
                "description": "Git reference (branch) to use when building the component",
                "type": "string"
              },
              "sourceRepo": {
                "description": "Source repository in following format: [namespace]/[repository-name]",
                "type": "string"
              },
              "target": {
                "description": "The Brew target",
                "type": "string"
              }
            },
            "required": ["sourceRepo", "sourceRef"],
            "type": "object"
          },
          "Container": {
            "allOf": [
              {
                "$ref": "#/components/schemas/Brew"
              },
              {
                "properties": {
                  "description": {
                    "description": "Container image description",
                    "type": "string"
                  },
                  "displayName": {
                    "description": "Container display name in the RHCC",
                    "type": "string"
                  },
                  "hostLevelAccess": {
                    "default": "unprivileged",
                    "description": "Container host level access",
                    "enum": ["unprivileged", "privileged"],
                    "type": "string"
                  },
                  "imageType": {
                    "default": "layered",
                    "description": "Container image type",
                    "enum": ["layered"],
                    "type": "string"
                  },
                  "summary": {
                    "description": "Container summary in the RHCC",
                    "type": "string"
                  }
                },
                "required": [
                  "description",
                  "displayName",
                  "summary",
                  "hostLevelAccess",
                  "imageType"
                ],
                "type": "object"
              }
            ]
          },
          "RPM": {
            "allOf": [
              {
                "$ref": "#/components/schemas/Brew"
              }
            ]
          }
        }
      },
      "description": "Schema definition for all supported component types within Brew\nbuilder",
      "discriminator": {
        "mapping": {
          "container": "#/components/schemas/Container",
          "rpm": "#/components/schemas/RPM"
        },
        "propertyName": "type"
      },
      "oneOf": [
        {
          "$ref": "#/components/schemas/Container"
        },
        {
          "$ref": "#/components/schemas/RPM"
        }
      ],
      "properties": {
        "type": {
          "description": "The type of the component supported by the builder",
          "enum": ["container", "rpm"],
          "type": "string"
        }
      }
    }
  },
  "task": "brew"
}
